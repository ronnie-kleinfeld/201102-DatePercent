<?xml version="1.0" encoding="utf-8"?>
<List:ListItemBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%" height="66"
				   xmlns:List="UI.List.*" xmlns:Label="UI.Label.*" xmlns:Photo="UI.Photo.*" xmlns:flexws="services.flexws.*" xmlns:Sep="UI.Sep.*">
	<fx:Metadata>
		[Event(name=REMOVE_BY_MEMBER_ID, type="flash.events.Event")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import Data.Member.ActiveData;
			import Data.Member.InboxData;
			
			import Handler.SesHandler;
			
			import UI.List.ListItemEvent;
			
			import Utils.AS3.Filters;
			import Utils.Log.Logger;
			
			protected override function get WidthTo():Number
			{
				return 180;
			}
			protected override function get HeightTo():Number
			{
				return 66;
			}
			
			public override function Dispose():void
			{
				super.Dispose();
				
				if (simplePhoto != null)
				{
					simplePhoto.Dispose();
					simplePhoto = null;
				}
			}
			
			protected override function rollOverHandler(event:MouseEvent):void
			{
				super.rollOverHandler(event);
				if (event.buttonDown)
				{
					simplePhoto.filters = [Utils.AS3.Filters.Glow, Utils.AS3.Filters.Sunken];
				}
				else
				{
					simplePhoto.filters = [Utils.AS3.Filters.Glow];
				}
			}
			protected override function rollOutHandler(event:MouseEvent):void
			{
				super.rollOutHandler(event);
				simplePhoto.filters = null;
			}
			protected override function mouseDownHandler(event:MouseEvent):void
			{
				super.mouseDownHandler(event);
				simplePhoto.filters = [Utils.AS3.Filters.Glow, Utils.AS3.Filters.Sunken];
			}
			protected override function mouseUpHandler(event:MouseEvent):void
			{
				super.mouseUpHandler(event);
				simplePhoto.filters = [Utils.AS3.Filters.Glow];
			}
			
			protected override function clickHandler(event:MouseEvent):void
			{
				var iMemberID:int = InboxData(m_objectBase).Member.ID;
				SesHandler.Instance.Session.Actives.AddItemActiveData(new ActiveData(iMemberID, ActiveData.MEMBER_DETAILS));
				callResponderDeleteMemberInbox.token = wsFlex.DeleteMemberInbox(SesHandler.Instance.Session.SID, iMemberID);
				SesHandler.Instance.Session.Inboxes.RemoveItemInboxDataByMemberID(iMemberID);
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:CallResponder id="callResponderDeleteMemberInbox"
						 result="Logger.Instance.WriteEvent(event, flash.utils.getQualifiedClassName(this))"
						 fault="Logger.Instance.WriteFaultEvent(event, flash.utils.getQualifiedClassName(this))"/>
		<flexws:FlexWS id="wsFlex"
					   fault="Logger.Instance.WriteFaultEvent(event, flash.utils.getQualifiedClassName(this))"/>
	</fx:Declarations>
	<s:VGroup width="100%" height="100%" paddingTop="4" paddingBottom="4">
		<s:HGroup width="100%" height="100%" paddingLeft="2" paddingRight="2">
			<Photo:SimplePhoto id="simplePhoto" m_iSize="49" Photo="{InboxData(m_objectBase).Member.Photo}"/>
			<s:VGroup width="100%" height="100%" gap="2">
				<Label:HeaderLabel id="labelHeadingName" text="{InboxData(m_objectBase).Member.NickName}"/>
				<Label:NormalLabel width="100%" height="100%" text="{InboxData(m_objectBase).Text}" color="0xffffff" maxDisplayedLines="4"/>
			</s:VGroup>
		</s:HGroup>
		<Sep:HSep width="100%" visible="{m_bAddSep}"/>
	</s:VGroup>
</List:ListItemBase>