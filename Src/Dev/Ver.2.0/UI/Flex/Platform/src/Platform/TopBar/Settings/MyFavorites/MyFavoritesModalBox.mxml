<?xml version="1.0" encoding="utf-8"?>
<ModalBox:ModalBoxBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
					   width="700" height="108"
					   initialize="initializeHandler(event)"
					   xmlns:ModalBox="UI.Box.ModalBox.*" xmlns:Box="UI.Box.*" xmlns:Label="UI.Label.*" xmlns:MyFavorites="Platform.TopBar.Settings.MyFavorites.*">
	<fx:Metadata>
		[Event(name=CLOSE, type="flash.events.Event")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import Handler.LocHandler;
			import Handler.SesHandler;
			
			import UI.Button.ButtonBase;
			import UI.Photo.PhotoBase;
			
			import Handler.LocGeneratedCode;
			
			import mx.events.FlexEvent;
			
			protected function initializeHandler(event:FlexEvent):void
			{
				boxBC.ShowCloseButton();
				boxBC.ShowTitle(LocHandler.GS(LocGeneratedCode.Edit_My_Favorite_Members));
			}
			public override function Init(p_buttonOpener:ButtonBase, p_photoBase:PhotoBase):void
			{
				super.Init(p_buttonOpener, p_photoBase);
				DoShowBox(boxCanvas);
			}
			public override function Dispose():void
			{
				super.Dispose();
				
				if (boxBC != null)
				{
					boxBC.Dispose();
				}
				if (boxCanvas != null)
				{
					boxCanvas.Dispose();
				}
				
				if (myFavoritesList != null)
				{
					myFavoritesList.Dispose();
					myFavoritesList = null;
				}
			}
			
			public function DoPaint():void
			{
				DoShowContent(boxContent);
				myFavoritesList.Init(SesHandler.Instance.Session.Favorites);
				myFavoritesList.DoFill();
			}
		]]>
	</fx:Script>
	<Box:BoxCanvas id="boxCanvas" width="100%" height="100%">
		<Box:BoxGroup id="boxGroup" width="100%" height="100%">
			<Box:BoxBC id="boxBC" width="100%" height="100%" CLOSE="dispatchEvent(new Event(CLOSE))">
				<Box:BoxContent id="boxContent" width="100%" height="100%">
					<mx:Spacer height="15"/>
					<Label:NormalLabel text="{LocHandler.GS(LocGeneratedCode.To_remove_a_member_click_on_the_X_mark)}"/>
					<MyFavorites:MyFavoritesModalBoxList id="myFavoritesList" width="100%" height="100%" m_iPaintedListItemCount="4" m_iPaintedListItemStpes="4"/>
				</Box:BoxContent>
			</Box:BoxBC>
		</Box:BoxGroup>
	</Box:BoxCanvas>
</ModalBox:ModalBoxBase>