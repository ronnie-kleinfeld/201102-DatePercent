<?xml version="1.0" encoding="utf-8"?>
<List:HListBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
				width="100%" height="100%"
				initialize="initializeHandler(event)"
				xmlns:List="UI.List.*" xmlns:Button="UI.Button.*">
	<fx:Script>
		<![CDATA[
			import Data.Base.CollectionEvent;
			import Data.Member.ActiveData;
			
			import Handler.SesHandler;
			
			import Platform.Map.MapBox;
			
			import UI.Box.BoxMDI;
			import UI.List.ListItemEvent;
			
			import mx.events.FlexEvent;
			
			protected override function get DoFillByTimer():Boolean
			{
				return false;
			}
			protected override function get AddItemByCollectionEvent():Boolean
			{
				return true;
			}
			
			private function initializeHandler(event:FlexEvent):void
			{
				m_scroller = scroller;
				m_hvGroup = hGroup;
				Init(SesHandler.Instance.Session.Actives);
			}
			public override function Dispose():void
			{
				super.Dispose();
				
				if (clickButtonNext != null)
				{
					clickButtonNext.Dispose();
					clickButtonNext = null;
				}
				if (clickButtonPrev != null)
				{
					clickButtonPrev.Dispose();
					clickButtonPrev = null;
				}
			}
			
			protected override function collectionBase_OBJECT_ADDED(event:CollectionEvent):void
			{
				if (AddItemByCollectionEvent)
				{
					BoxMDI.GetBoxMDI.DoCloseAllBox();
					AddActivesBarListItem(ActiveData(event.ObjectData));
				}
			}
			private function AddActivesBarListItem(p_activeData:ActiveData):void
			{
				var activesBarListItem:ActivesBarListItem = new ActivesBarListItem();
				activesBarListItem.Init(p_activeData);
				activesBarListItem.selectPhoto.Selected = true;
				AddListItem(activesBarListItem, true);
				MapBox.GetMapBox.PokeByID(activesBarListItem.m_objectBase.ID);
			}
			
			protected override function collectionBase_OBJECT_ALLREADY_EXISTS(event:CollectionEvent):void
			{
				for (var i:int = 0; i < m_hvGroup.numElements; i++)
				{
					var activesBarListItem:ActivesBarListItem = ActivesBarListItem(m_hvGroup.getElementAt(i));
					if (activesBarListItem.m_objectBase.ID == event.ObjectData.ID)
					{
						activesBarListItem.selectPhoto.Selected = true;
						activesBarListItem.DoShowMemberPopBox();
						MapBox.GetMapBox.PokeByID(activesBarListItem.m_objectBase.ID);
						break;
					}
				}
			}
			
			public function DoShowRemove():void
			{
				for (var i:int = 0; i < hGroup.numElements; i++)
				{
					var activesBarListItem:ActivesBarListItem = ActivesBarListItem(m_hvGroup.getElementAt(i));
					activesBarListItem.selectPhoto.DoShowRemove();
				}
			}
			public function DoHideRemove():void
			{
				for (var i:int = 0; i < hGroup.numElements; i++)
				{
					var activesBarListItem:ActivesBarListItem = ActivesBarListItem(m_hvGroup.getElementAt(i));
					activesBarListItem.selectPhoto.DoHideRemove();
				}
			}
			
			protected override function listItem_LIST_ITEM_REMOVED(event:ListItemEvent):void
			{
				super.listItem_LIST_ITEM_REMOVED(event);
				BoxMDI.GetBoxMDI.DoCloseAllBox();
			}
		]]>
	</fx:Script>
	<s:HGroup width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
		<Button:ClickButton id="clickButtonPrev" visible="{m_bPrevVisible}" m_png="{m_classPrevPng}" CLICKED="DoMovePrev()" m_strTooltip="{m_strToolTipPrev}"/>
		<s:Scroller id="scroller" width="100%" height="100%" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			<s:Group width="100%" height="100%">
				<s:HGroup id="hGroup" width="100%" height="100%" clipAndEnableScrolling="false" verticalAlign="middle" paddingLeft="2" paddingRight="2" gap="2"/>
			</s:Group>
		</s:Scroller>
		<Button:ClickButton id="clickButtonNext" visible="{m_bNextVisible}" m_png="{m_classNextPng}" CLICKED="DoMoveNext()" m_strTooltip="{m_strToolTipNext}"/>
	</s:HGroup>
</List:HListBase>