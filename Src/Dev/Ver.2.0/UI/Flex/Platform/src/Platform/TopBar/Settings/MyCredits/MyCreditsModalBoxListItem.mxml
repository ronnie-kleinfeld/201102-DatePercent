<?xml version="1.0" encoding="utf-8"?>
<List:ListItemBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%"
				   buttonMode="false"
				   xmlns:List="UI.List.*" xmlns:Photo="UI.Photo.*" xmlns:Label="UI.Label.*">
	<fx:Script>
		<![CDATA[
			import Data.Member.CreditData;
			
			import Enum.CreditsTypeEnum;
			
			import Handler.AppHandler;
			
			protected override function get WidthTo():Number
			{
				return 450;
			}
			protected override function get HeightTo():Number
			{
				return 24;
			}

			public override function Dispose():void
			{
				super.Dispose();
				
				if (simplePhotoPresentTypeCode != null)
				{
					simplePhotoPresentTypeCode.Dispose();
					simplePhotoPresentTypeCode = null;
				}
				if (simplePhotoGetterMember != null)
				{
					simplePhotoGetterMember.Dispose();
					simplePhotoGetterMember = null;
				}
			}
		]]>
	</fx:Script>
	<s:HGroup width="100%" height="100%" gap="0">
		<mx:Spacer width="{CreditData(m_objectBase).CreditTypeCode==CreditsTypeEnum.TRANSACTION_COMPLETED?24:0}"/>
		<mx:Spacer width="{CreditData(m_objectBase).CreditTypeCode==CreditsTypeEnum.TRANSACTION_REFUNDED?24:0}"/>
		<Photo:SimplePhoto id="simplePhotoGetterMember" m_iSize="{CreditData(m_objectBase).CreditTypeCode==CreditsTypeEnum.UNLIMITED_CHAT_WITH_A_MEMBER?24:0}" Photo="{CreditData(m_objectBase).GetterMember.Photo}"/>
		<Photo:SimplePhoto id="simplePhotoPresentTypeCode" m_iSize="{CreditData(m_objectBase).CreditTypeCode==CreditsTypeEnum.SEND_A_PRESENT?24:0}" Photo="{AppHandler.Instance.Presents.FindItemPresentDataByID(CreditData(m_objectBase).PresentTypeCode).Photo}"/>
		<mx:Spacer width="10"/>
		<Label:NormalLabel width="160" height="100%" text="{CreditsTypeEnum.CreditsLabel(CreditData(m_objectBase).CreditTypeCode)}" paddingTop="3"/>
		<mx:Spacer width="4"/>
		<Label:NormalLabel width="100" height="100%" text="{CreditData(m_objectBase).SentDateTime.toLocaleDateString()}" paddingTop="3"/>
		<mx:Spacer width="4"/>
		<Label:NormalLabel height="100%" text="{CreditData(m_objectBase).Credits}" paddingTop="3"/>
	</s:HGroup>
</List:ListItemBase>