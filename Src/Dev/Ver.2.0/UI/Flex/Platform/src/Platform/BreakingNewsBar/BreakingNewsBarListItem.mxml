<?xml version="1.0" encoding="utf-8"?>
<List:ListItemBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%" height="31"
				   xmlns:List="UI.List.*" xmlns:Photo="UI.Photo.*" xmlns:Label="UI.Label.*" xmlns:Sep="UI.Sep.*">
	<fx:Script>
		<![CDATA[
			import Data.Member.ActiveData;
			import Data.Member.BreakingNewsData;
			
			import Enum.PinPercentTypeEnum;
			
			import Handler.SesHandler;
			
			import Utils.AS3.Filters;
			
			protected override function get WidthTo():Number
			{
				return 118;
			}
			protected override function get HeightTo():Number
			{
				return 31;
			}
			
			public override function Dispose():void
			{
				super.Dispose();
				
				if (simplePhoto != null)
				{
					simplePhoto.Dispose();
					simplePhoto = null;
				}
			}
			
			protected override function rollOverHandler(event:MouseEvent):void
			{
				super.rollOverHandler(event);
				if (event.buttonDown)
				{
					filters = [Utils.AS3.Filters.MO, Utils.AS3.Filters.Sunken];
				}
				else
				{
					filters = [Utils.AS3.Filters.MO];
				}
			}
			protected override function rollOutHandler(event:MouseEvent):void
			{
				super.rollOutHandler(event);
				filters = null;
			}
			protected override function mouseDownHandler(event:MouseEvent):void
			{
				super.mouseDownHandler(event);
				filters = [Utils.AS3.Filters.MO, Utils.AS3.Filters.Sunken];
			}
			protected override function mouseUpHandler(event:MouseEvent):void
			{
				super.mouseUpHandler(event);
				filters = [Utils.AS3.Filters.MO];
			}
			
			protected override function clickHandler(event:MouseEvent):void
			{
				SesHandler.Instance.Session.Actives.AddItemActiveData(new ActiveData(BreakingNewsData(m_objectBase).Member.ID, ActiveData.MEMBER_DETAILS));
			}
		]]>
	</fx:Script>
	<s:BorderContainer width="100%" height="100%" minWidth="0" minHeight="0" borderVisible="false" cornerRadius="6"
					   backgroundColor="{Enum.PinPercentTypeEnum.Color(BreakingNewsData(m_objectBase).Member.DatePercentageValue)}"
					   backgroundAlpha="0.77">
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		<s:HGroup width="100%" height="100%" paddingLeft="2" paddingRight="2" gap="4">
			<Photo:SimplePhoto id="simplePhoto" m_iSize="30" Photo="{BreakingNewsData(m_objectBase).Member.Photo}" NotificationCount="{BreakingNewsData(m_objectBase).Member.CommCount}"/>
			<Label:HeaderLabel id="labelHeadingName" height="100%" maxWidth="50" maxDisplayedLines="1" text="{BreakingNewsData(m_objectBase).Member.NickName}" textAlign="left" verticalAlign="middle"/>
			<mx:Spacer width="100%"/>
			<Label:NormalLabel id="labelDatePercentage" height="100%" text="{BreakingNewsData(m_objectBase).Member.DatePercentageLabel}" textAlign="right" verticalAlign="middle"/>
		</s:HGroup>
		<Sep:HSep width="100%" visible="{m_bAddSep}"/>
	</s:BorderContainer>
</List:ListItemBase>